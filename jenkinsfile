pipeline {
    agent any

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build & Deploy') {
            steps {
                script {
                    // Stop and remove any existing containers with the same name
                    sh '''
                    docker ps -q -f name=mysql_db | xargs -r docker rm -f
                    docker ps -q -f name=webserver | xargs -r docker rm -f
                    docker-compose -f docker-compose.yml up -d --build
                    '''
                }
            }
        }

        stage('Post Actions') {
            steps {
                echo 'Cleaning up...'
                script {
                    // Stop and remove containers and networks after the deployment
                    sh '''
                    docker-compose down
                    '''
                }
            }
        }
    }
}
